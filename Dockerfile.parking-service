FROM maven:3.9-eclipse-temurin-21 AS build

WORKDIR /app

# Copy only the parking-service module
COPY parking-service/pom.xml ./parking-service/
COPY parking-service/src ./parking-service/src
RUN mvn -f parking-service/pom.xml clean package -DskipTests

FROM eclipse-temurin:21-jre

WORKDIR /app
COPY --from=build /app/parking-service/target/*.jar app.jar

EXPOSE 8083
ENTRYPOINT ["java", "-jar", "app.jar"]
